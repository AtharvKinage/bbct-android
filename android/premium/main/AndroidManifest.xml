<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="bbct.android.premium"
          android:versionCode="3"
          android:versionName="@string/version_number"
>
    <uses-sdk android:minSdkVersion="7"
              android:targetSdkVersion="16"
    />
    <uses-permission android:name="bbct.android.lite.permission.READ" />
    <application android:label="@string/app_name"
                 android:icon="@drawable/baseball"
    >
        <activity android:name="bbct.android.common.activity.BaseballCardList"
                  android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="bbct.android.common.activity.BaseballCardDetails">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/baseball_card" />
            </intent-filter>
        </activity>
        <activity android:name="bbct.android.common.activity.FilterOptions"/>
        <activity android:name="bbct.android.common.activity.YearFilter"/>
        <activity android:name="bbct.android.common.activity.NumberFilter"/>
        <activity android:name="bbct.android.common.activity.YearAndNumberFilter"/>
        <activity android:name="bbct.android.common.activity.PlayerNameFilter"/>
        <activity android:name="bbct.android.common.activity.About" />
    </application>
</manifest>
