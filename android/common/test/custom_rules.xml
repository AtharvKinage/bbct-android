<project name="bbct-android-common-test-custom-rules" default="help">

    <property name="javadoc.title" value=""/>
    <property name="android.jar" value="${sdk.dir}/platforms/${target}/android.jar"/>
    <property name="android.docs" value="${sdk.dir}/docs/reference"/>

    <target name="javadoc" description="Generate javadocs for this project">
        <javadoc sourcepath="${source.dir}"
                 destdir="${javadoc.dir}"
                 classpath="${android.jar};../lib/bin/classes.jar"
                 Doctitle="${javadoc.title}"
                 link="${android.docs}"
                 linksource="yes"
        />
    </target>

</project>
