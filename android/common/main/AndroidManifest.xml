<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="bbct.android.common"
          android:versionCode="1"
          android:versionName="1.0"
>
    <uses-sdk android:minSdkVersion="7" 
              android:targetSdkVersion="16"
    />
    <application android:label="@string/app_name"
                 android:icon="@drawable/baseball"
    >
        <activity android:name=".BaseballCardList"
                  android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseballCardDetails">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/baseball_card" />
            </intent-filter>
        </activity>
        <activity android:name=".FilterOptions"/>
        <activity android:name=".YearFilter"/>
        <activity android:name=".NumberFilter"/>
        <activity android:name=".YearAndNumberFilter"/>
        <activity android:name=".PlayerNameFilter"/>
        <activity android:name=".About" />
        <provider android:name=".BaseballCardProvider"
                  android:label="@string/provider_name"
                  android:authorities="bbct.android.baseballcardprovider"
                  android:readPermission="bbct.android.baseballcardprovider.permission.READ"
        />
    </application>
</manifest>
